<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN" "http://www.opensymphony.com/xwork/xwork-1.0.dtd">
<xwork>
    <package name="public" extends="default">
        <default-interceptor-ref name="completeStack"/>

        <action name="categoryPicker" class="org.hibernate.auction.web.actions.categories.CategoryPicker">
            <interceptor-ref name="component"/>
        </action>

        <action name="categoryTree" class="org.hibernate.auction.web.actions.categories.CategoryPicker">
            <result name="success">/categoryTree.jsp</result>
        </action>

        <action name="login" class="org.hibernate.auction.web.actions.users.Login">
            <result name="input">login.jsp</result>
            <result name="success" type="redirect">/secure/dashboard.action</result>
        </action>


        <action name="createUserPrepare" class="org.hibernate.auction.web.actions.users.CreateUser" method="default">
            <result name="input">createUser.jsp</result>
        </action>

        <action name="createUser" class="org.hibernate.auction.web.actions.users.CreateUser">
            <interceptor-ref name="completeStack"/>
            <interceptor-ref name="token-session"/>

            <result name="input">createUser.jsp</result>
            <result name="success" type="chain">login</result>
        </action>
    </package>
</xwork>

